<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="crsxviz" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>crsxviz.persistence.beans.Cookies</class>
        <class>crsxviz.persistence.beans.ActiveRules</class>
        <class>crsxviz.persistence.beans.Steps</class>
        <properties>
            <property name="eclipselink.logging.level" value="FINE"/>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:out.db"/>-->
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>
</persistence>